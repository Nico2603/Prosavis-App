rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // === USUARIOS ===
    // Permitir a los usuarios autenticados leer y escribir solo sus propios datos
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // === SERVICIOS ===
    // ‚úÖ NAVEGACI√ìN P√öBLICA: Cualquiera puede explorar servicios
    // üîí CREACI√ìN PRIVADA: Solo usuarios autenticados pueden crear/modificar
    match /services/{serviceId} {
      allow read: if true; // üìñ Lectura p√∫blica para navegaci√≥n
      allow create: if request.auth != null && 
                   request.auth.uid == resource.data.providerId; // üîê Solo usuarios reales
      allow update, delete: if request.auth != null && 
                           request.auth.uid == resource.data.providerId; // üîê Solo propietario
    }
    
    // === RESERVAS ===
    // Los usuarios pueden ver sus propias reservas (como cliente o proveedor)
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null && 
                        (request.auth.uid == resource.data.clientId || 
                         request.auth.uid == resource.data.providerId);
    }
    
    // === CATEGOR√çAS ===
    // ‚úÖ NAVEGACI√ìN P√öBLICA: Cualquiera puede ver categor√≠as
    // üîí ADMINISTRACI√ìN PRIVADA: Solo administradores pueden modificar
    match /categories/{categoryId} {
      allow read: if true; // üìñ Lectura p√∫blica para navegaci√≥n
      // Las categor√≠as solo pueden ser modificadas por administradores
      allow write: if false; // üîê Solo administradores (backend)
    }
    
    // === MENSAJES/CHAT ===
    // Los usuarios pueden leer/escribir solo en conversaciones donde participan
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null && 
                        request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null && 
                          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
      }
    }
    
    // === NOTIFICACIONES ===
    // Los usuarios solo pueden leer sus propias notificaciones
    match /notifications/{notificationId} {
      allow read: if request.auth != null && 
                 request.auth.uid == resource.data.userId;
      // Las notificaciones se crean desde el backend
      allow write: if false;
    }
    
    // === CONFIGURACI√ìN GLOBAL ===
    // Solo lectura para configuraciones globales de la app
    match /app_config/{configId} {
      allow read: if request.auth != null;
      allow write: if false; // Solo administradores desde backend
    }
    
    // Denegar acceso a todo lo dem√°s por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}